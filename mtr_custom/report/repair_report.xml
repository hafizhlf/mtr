<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="repair_report_template">
           <t t-call="web.html_container">                                    
                <t t-foreach="docs.maintenance_id" t-as="doc">                    
                    <t t-call="web.basic_layout">
                        <div class="header" style="border:1px solid black;">
                            <div class="row" style="margin:15px;">
                                <div class="col-3 mb4">
                                    <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)" style="float: left;max-height: 90px;margin-top:-12px;margin-left:20px;" alt="Logo"/>
                                </div>
                                <div class="col-9">
                                    <div style="font-size: 20px;margin-top:19px;"><center><b><span>PT.METHOBI TRANSTITIAN RAYA</span></b></center></div>
                                    <div style="font-size: 20px;"><center><b><span>PERMINTAAN PERAWATAN DAN PERBAIKAN</span></b></center></div>
                                    <div><center><b><span style="font-size: 18px;">No. <t t-esc="doc.name_custom"/></span></b></center></div>
                                </div>
                            </div>
                        </div>                                                
                        <div class="page" style="font-family: 'Times New Roman';">
                            <style>
                                .checkbox-icon {
                                    display: inline-block;
                                    width: 20px;
                                    height: 20px;
                                    border: 1px solid #ccc;
                                    position: relative;
                                }
                                .checkbox-icon i {
                                    position: absolute;
                                    top: 50%;
                                    left: 50%;
                                    transform: translate(-50%, -50%);
                                }
                                .checkbox-icon.checked {
                                    background-color: #007bff;
                                    border-color: #007bff;
                                }
                                .checkbox-icon.checked i {
                                    color: white;
                                }
                                .tables {
                                    border-collapse: collapse;
                                }
                                .tds {
                                    border: 1px solid black ;
                                    text-align: center;
                                    padding: 8px;
                                }
                                table {
                                    border-collapse: collapse;
                                    border: 1px solid white; /* menghilangkan border */
                                }
                                th, td {
                                    padding: 8px;
                                    text-align: left;
                                }
                            </style>
                            <div style="border-bottom:1px solid black;border-left:1px solid black;border-right:1px solid black;margin-top:-20px;">
                                <div style="margin-bottom:30px;"></div>
                                <div style="margin:15px;"><br/>
                                    <table  style="width:100%;font-size: 14px;">
                                        <tr>
                                            <td width="25%">Jenis Alat / Kendaraan</td>
                                            <td width="5%">:</td>
                                            <td width="60%"><t t-esc="doc.vehicle_id.display_name"/></td>
                                            <td width="10%">HM / KM</td>
                                        </tr>
                                        <tr>
                                            <td width="25%"></td>
                                            <td width="5%"></td>
                                            <td width="60%"></td>
                                            <td width="10%"></td>
                                        </tr>
                                        <tr>
                                            <td width="25%">Type / Merk</td>
                                            <td width="5%">:</td>
                                            <td width="60%"><t t-esc="doc.vehicle_type_id.display_name"/></td>
                                            <td width="10%"></td>
                                        </tr>
                                        <tr>
                                            <td width="25%"></td>
                                            <td width="5%"></td>
                                            <td width="60%"></td>
                                            <td width="10%"></td>
                                        </tr>
                                        <tr>
                                            <td width="25%">No. Pol / Unit</td>
                                            <td width="5%">:</td>
                                            <td width="60%"><t t-esc="doc.no_pol"/></td>
                                            <td width="10%"></td>
                                        </tr>
                                        <tr>
                                            <td width="25%"></td>
                                            <td width="5%"></td>
                                            <td width="60%"></td>
                                            <td width="10%"></td>
                                        </tr>
                                        <tr>
                                            <td width="25%">Estate</td>
                                            <td width="5%">:</td>
                                            <td width="60%"><t t-esc="doc.estate"/></td>
                                            <td width="10%"></td>
                                        </tr>                                    
                                    </table><br/>
                                    <div>Berilah tanda untuk type service</div><br/>
                                    <table style="width:100%;font-size: 14px;">
                                        <tr>
                                            <td width="5%">
                                                <t t-if="doc.service">
                                                    <div class="checkbox-icon checked">
                                                        <i class="fas fa-check" style="display: block;"></i>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="checkbox-icon">
                                                        <i class="fas fa-check" style="display: none;"></i>
                                                    </div>
                                                </t>
                                            </td>
                                            <td width="28%">Service Rutin</td>
                                            <td width="5%">
                                                <t t-if="doc.fuel">
                                                    <div class="checkbox-icon checked">
                                                        <i class="fas fa-check" style="display: block;"></i>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="checkbox-icon">
                                                        <i class="fas fa-check" style="display: none;"></i>
                                                    </div>
                                                </t>
                                            </td>
                                            <td width="28%">Fuel System</td>
                                            <td width="5%">
                                                <t t-if="doc.power">
                                                    <div class="checkbox-icon checked">
                                                        <i class="fas fa-check" style="display: block;"></i>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="checkbox-icon">
                                                        <i class="fas fa-check" style="display: none;"></i>
                                                    </div>
                                                </t>
                                            </td>
                                            <td width="28%">Power Train System</td>
                                        </tr>
                                        
                                        <tr>
                                            <td width="5%">
                                                <t t-if="doc.engine">
                                                    <div class="checkbox-icon checked">
                                                        <i class="fas fa-check" style="display: block;"></i>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="checkbox-icon">
                                                        <i class="fas fa-check" style="display: none;"></i>
                                                    </div>
                                                </t>
                                            </td>
                                            <td width="28%">Engine System</td>
                                            <td width="5%">
                                                <t t-if="doc.steering">
                                                    <div class="checkbox-icon checked">
                                                        <i class="fas fa-check" style="display: block;"></i>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="checkbox-icon">
                                                        <i class="fas fa-check" style="display: none;"></i>
                                                    </div>
                                                </t>
                                            </td>
                                            <td width="28%">Steering System</td>
                                            <td width="5%">
                                                <t t-if="doc.final">
                                                    <div class="checkbox-icon checked">
                                                        <i class="fas fa-check" style="display: block;"></i>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="checkbox-icon">
                                                        <i class="fas fa-check" style="display: none;"></i>
                                                    </div>
                                                </t>
                                            </td>
                                            <td width="28%">Final Drive System</td>
                                        </tr>
                                        <tr>
                                            <td width="5%">
                                                <t t-if="doc.transmision">
                                                    <div class="checkbox-icon checked">
                                                        <i class="fas fa-check" style="display: block;"></i>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="checkbox-icon">
                                                        <i class="fas fa-check" style="display: none;"></i>
                                                    </div>
                                                </t>
                                            </td>
                                            <td width="28%">Transmision System</td>
                                            <td width="5%">
                                                <t t-if="doc.brake">
                                                    <div class="checkbox-icon checked">
                                                        <i class="fas fa-check" style="display: block;"></i>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="checkbox-icon">
                                                        <i class="fas fa-check" style="display: none;"></i>
                                                    </div>
                                                </t>
                                            </td>
                                            <td width="28%">Brake System</td>
                                            <td width="5%">
                                                <t t-if="doc.hydroulic">
                                                    <div class="checkbox-icon checked">
                                                        <i class="fas fa-check" style="display: block;"></i>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="checkbox-icon">
                                                        <i class="fas fa-check" style="display: none;"></i>
                                                    </div>
                                                </t>
                                            </td>
                                            <td width="28%">Hydroulic System</td>
                                        </tr>

                                        <tr>
                                            <td width="5%">
                                                <t t-if="doc.differential">
                                                    <div class="checkbox-icon checked">
                                                        <i class="fas fa-check" style="display: block;"></i>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="checkbox-icon">
                                                        <i class="fas fa-check" style="display: none;"></i>
                                                    </div>
                                                </t>
                                            </td>
                                            <td width="28%">Differential System</td>
                                            <td width="5%">
                                                <t t-if="doc.cooling">
                                                    <div class="checkbox-icon checked">
                                                        <i class="fas fa-check" style="display: block;"></i>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="checkbox-icon">
                                                        <i class="fas fa-check" style="display: none;"></i>
                                                    </div>
                                                </t>
                                            </td>
                                            <td width="28%">Cooling System</td>
                                            <td width="5%">
                                                <t t-if="doc.carriage">
                                                    <div class="checkbox-icon checked">
                                                        <i class="fas fa-check" style="display: block;"></i>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="checkbox-icon">
                                                        <i class="fas fa-check" style="display: none;"></i>
                                                    </div>
                                                </t>
                                            </td>
                                            <td width="28%">Under Carriage</td>
                                        </tr>

                                        <tr>
                                            <td width="5%">
                                                <t t-if="doc.chasis">
                                                    <div class="checkbox-icon checked">
                                                        <i class="fas fa-check" style="display: block;"></i>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="checkbox-icon">
                                                        <i class="fas fa-check" style="display: none;"></i>
                                                    </div>
                                                </t>
                                            </td>
                                            <td width="28%">Chasis System</td>
                                            <td width="5%">
                                                <t t-if="doc.suspension">
                                                    <div class="checkbox-icon checked">
                                                        <i class="fas fa-check" style="display: block;"></i>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="checkbox-icon">
                                                        <i class="fas fa-check" style="display: none;"></i>
                                                    </div>
                                                </t>
                                            </td>
                                            <td width="28%">Suspension System</td>
                                            <td width="5%">
                                                <t t-if="doc.general">
                                                    <div class="checkbox-icon checked">
                                                        <i class="fas fa-check" style="display: block;"></i>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="checkbox-icon">
                                                        <i class="fas fa-check" style="display: none;"></i>
                                                    </div>
                                                </t>
                                            </td>
                                            <td width="28%">General System</td>
                                        </tr>

                                        <tr>
                                            <td width="5%">
                                                <t t-if="doc.electric">
                                                    <div class="checkbox-icon checked">
                                                        <i class="fas fa-check" style="display: block;"></i>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="checkbox-icon">
                                                        <i class="fas fa-check" style="display: none;"></i>
                                                    </div>
                                                </t>
                                            </td>
                                            <td width="28%">Electric System</td>
                                            <td width="5%">
                                                <t t-if="doc.greasing">
                                                    <div class="checkbox-icon checked">
                                                        <i class="fas fa-check" style="display: block;"></i>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="checkbox-icon">
                                                        <i class="fas fa-check" style="display: none;"></i>
                                                    </div>
                                                </t>
                                            </td>
                                            <td width="28%">Greasing</td>
                                            <td width="5%">
                                                <t t-if="doc.others">
                                                    <div class="checkbox-icon checked">
                                                        <i class="fas fa-check" style="display: block;"></i>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <div class="checkbox-icon">
                                                        <i class="fas fa-check" style="display: none;"></i>
                                                    </div>
                                                </t>
                                            </td>
                                            <td width="28%">Others</td>
                                        </tr>
                                    </table><br/>
                                    <div>Uraikan Singkat Masalah / Kerusakan</div>
                                    <div><t t-esc="doc.description"/></div>
                                    <div>Tanggal : .......................</div>
                                    <table style="width:100%;font-size: 14px;">
                                        <tr>
                                            <t t-foreach="doc.review_ids" t-as="review">
                                                <t t-if="review.status == 'approved'">
                                                    <td width="32%">
                                                        <center>
                                                            <img style="height : 100px;" t-attf-src="data:image/png;base64,{{review.done_by.sign_signature}}"/>
                                                        </center>
                                                    </td>
                                                </t>
                                            </t>
                                        </tr>
                                    </table><br/>
                                    <table style="width:100%;font-size: 14px;">
                                        <tr>
                                            <t t-foreach="doc.review_ids" t-as="review">
                                                <t t-if="review.status == 'approved'">
                                                    <td width="32%">
                                                        <center>
                                                            (_____________________)
                                                        </center>
                                                    </td>
                                                </t>
                                            </t>
                                        </tr> 
                                        <tr>
                                            <t t-foreach="doc.review_ids" t-as="review">
                                                <t t-if="review.status == 'approved'">
                                                    <td width="32%">
                                                        <center>
                                                            <t t-esc="review.definition_id.sign_label"/>
                                                        </center>
                                                    </td>
                                                </t>
                                            </t>
                                        </tr>                              
                                    </table>
                                </div>
                            </div>
                            <div style="border-bottom:1px solid black;border-left:1px solid black;border-right:1px solid black;margin-top:-20px;">
                                <div style="margin:15px;"><br/>
                                    <div>Diisi oleh Mekanik :</div>
                                    <div>A. Perbaikan (Repairing) :</div><br/>
                                    <div style="border-bottom:2px dotted black;"></div><br/>
                                    <div style="border-bottom:2px dotted black;"></div><br/><br/>

                                    <div>B. Pergantian Sparepart:</div><br/>
                                    <table class="tables" style="width:100%;font-size: 14px;">
                                        <thead>
                                            <tr>
                                                <td class="tds" width="5%">No</td>
                                                <td class="tds" width="25%">Nama Spare Part</td>
                                                <td class="tds" width="25%">Part Number</td>
                                                <td class="tds" width="5%">Jumlah</td>
                                                <td class="tds" width="40%">Keterangan</td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-set="no" t-value="1"/>
                                            <t t-foreach="doc.repair_ids" t-as="repairs">                               
                                                <t t-foreach="repairs.operations" t-as="line">                               
                                                    <tr>
                                                        <td class="tds" width="5%"><t t-esc="no"/></td>
                                                        <td class="tds" width="25%"><t t-esc="line.product_id.name"/></td>
                                                        <td class="tds" width="25%"><t t-esc="line.product_id.default_code"/></td>
                                                        <td class="tds" width="5%"><t t-esc="line.product_uom_qty"/></td>
                                                        <td class="tds" width="40%"><t t-esc="line.remarks"/></td>
                                                        <t t-set="no" t-value="no+1"/>
                                                    </tr>
                                                </t>
                                            </t>
                                        </tbody>
                                    </table><br/>
                                    <div style="page-break-inside: avoid;">
                                        <div>Tanggal : .......................</div><br/>
                                        <table style="width:100%;font-size: 16px;">
                                            <tr>
                                                <td width="32%"><center>Dikerjakan</center></td>
                                                <td width="32%"><center>Diperiksa</center></td>
                                                <td width="32%"><center>Diketahui</center></td>
                                            </tr>
                                        </table><br/><br/><br/><br/>
                                        <table style="width:100%;font-size: 16px;">
                                            <tr>
                                                <td width="32%"><center>(_____________________)</center></td>
                                                <td width="32%"><center>(_____________________)</center></td>
                                                <td width="32%"><center>(_____________________)</center></td>
                                            </tr>  
                                            <tr>
                                                <td width="32%"><center>Mekanik</center></td>
                                                <td width="32%"><center>Mandor / Kerani</center></td>
                                                <td width="32%"><center>Asisten</center></td>
                                            </tr>                            
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="paperformat_repair_report_template" model="report.paperformat">
            <field name="name">Maintenance A4</field>
            <field name="default" eval="False" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">36</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">27</field>
            <field name="dpi">90</field>
        </record>

       <record id="action_repair_report_template" model="ir.actions.report">
            <field name="name">Report Perbaikan</field>
            <field name="model">repair.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">mtr_custom.repair_report_template</field>
            <field name="report_file">mtr_custom.repair_report_template</field>
            <field name="print_report_name">'Report Perbaikan'</field>
            <field name="binding_model_id" ref="model_repair_order"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="mtr_custom.paperformat_repair_report_template"/>
        </record>
    </data>
</odoo>